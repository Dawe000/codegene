<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VSCode Extension WebView</title>
</head>
<body>
  <div id="root"></div>
  <script>
    // Mock the VS Code API for local development
    window.acquireVsCodeApi = function() {
      return {
        postMessage: function(message) {
          console.log('Message posted to VS Code:', message);
        },
        getState: function() {
          return JSON.parse(localStorage.getItem('vscode-state') || '{}');
        },
        setState: function(state) {
          localStorage.setItem('vscode-state', JSON.stringify(state));
        }
      };
    };
  </script>
  <script src="../../out/webview.js"></script>
</body>
</html>